#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules/clang-format/bin/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules/clang-format/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules/clang-format/bin/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules/clang-format/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/clang-format@1.8.0/node_modules:/Users/lherbold/projects/repack/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/python" ]; then
  exec "$basedir/python"  "$basedir/../clang-format/bin/git-clang-format" "$@"
else
  exec python  "$basedir/../clang-format/bin/git-clang-format" "$@"
fi
